@model IEnumerable<TCNX.Models.DBModel.tbltranshistory>
@{
    ViewData["Title"] = "Report";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}



<div class="block-header">
    <div class="row">
        <div class="col-lg-5 col-md-5 col-sm-12">
            <h2>Transaction History</h2>
        </div>
        <div class="col-lg-7 col-md-7 col-sm-12 text-md-right">
            <ul class="breadcrumb float-md-right">
                <li class="breadcrumb-item"><a href="/User/Index"><i class="zmdi zmdi-home"></i>Dashboard</a></li>
                <span style="color:white;margin-left:1px;margin-right:1px;">/</span>
                <li style="color:white;margin-left:1px;margin-right:1px;" class="breadcrumb-item active">Update Crypto Address</li>
            </ul>
        </div>
    </div>
</div>
<div class="container-fluid">
    <!-- Basic Examples -->
    <div class="row clearfix">
        <div class="col-lg-12">
            <div class="card">
                <div class="body">
                    <div class="table-responsive">
                        <table id="example1" class="table table-bordered table-striped table-hover js-basic-example dataTable">
                            <thead>
                                <tr>
                                    <th>Sr No</th>

                                    <th>UserName </th>
                                    <th>Income Amt</th>
                                    <th>Income Date</th>
                                    <th>Status Info</th>
                                    <th>Income Status</th>




                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 0;

                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Convert.ToInt32(i + 1) </td>

                                            <td>@item.givemid  </td>
                                            <td style="text-align: right">@String.Format("{0:N2}", Convert.ToDouble(item.tamount))  </td>
                                            <td>@item.edate </td>

                                            <td>@item.status </td>
                                            <td>
                                                @if (@item.approvedstatus == 1)
                                                {
                                                    <label>Added</label>
                                                }
                                                else if (@item.approvedstatus == 1)
                                                {
                                                    <label>Rejected</label>
                                                }
                                                else
                                                {
                                                    <label>Pending</label>
                                                }
                                            </td>



                                        </tr>
                                    }


                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #END# Basic Examples -->
</div>
