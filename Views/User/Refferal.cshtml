@using TCNX.commonFunction;
@using System.Data;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<div class="block-header">
    <div class="row">
        <div class="col-lg-5 col-md-5 col-sm-12">
            <h2>Direct Affliate Team</h2>
        </div>
        <div class="col-lg-7 col-md-7 col-sm-12 text-md-right">
            <ul class="breadcrumb float-md-right">
                <li class="breadcrumb-item"><a href="/User/Index"><i class="zmdi zmdi-home"></i>Dashboard</a></li>
                <span style="color:white;margin-left:1px;margin-right:1px;">/</span>
                <li style="color:white;margin-left:1px;margin-right:1px;" class="breadcrumb-item active">Update Crypto Address</li>
            </ul>
        </div>
    </div>
</div>
<div class="container-fluid">
    <!-- Basic Examples -->
    <div class="row clearfix">
        <div class="col-lg-12">
            <div class="card">
                <div class="body">
                    <div class="table-responsive">
                        <table id="example1" class="table table-bordered table-striped table-hover js-basic-example dataTable">
                            <thead>
                                <tr>
                                    <th>Sr No</th>

                                    <th>UserName </th>
                                    <th>Name</th>
                                  
                                    <th>Status</th>                                    
                                    <th>Reg.Date</th>
                                    <th>TopupDate</th>
                                    <th>Topup</th>

                                </tr>
                            </thead>
                            <tbody>

                                @if (ViewData["DIRECTREFERRALS"] != null)
                                {
                                    //  int i = 0;
                                    DataTable dt = (ViewData["DIRECTREFERRALS"] as System.Data.DataTable);
                                    if (dt.Rows.Count > 0)
                                    {
                                        for (int i = 0; i < dt.Rows.Count; i++)
                                        {
                                <tr>
                                    <td>@Convert.ToInt32(i + 1) </td>

                                    <td>@dt.Rows[i]["username"]  </td>
                                    <td>@dt.Rows[i]["memb_name"] </td>
                                   
                                    <td>@dt.Rows[i]["ACTIVE_STATUS"] </td>                                   
                                    <td>@dt.Rows[i]["reg_date"] </td>
                                    <td>@dt.Rows[i]["TOPUP_DATE"] </td>
                                    <td style="text-align: right">@String.Format("{0:N2}", Convert.ToDouble(dt.Rows[i]["packageamt"]))  </td>

                                </tr>
                                        }
                                    }
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #END# Basic Examples -->
</div>

